<head>
<style>
@import url('https://fonts.googleapis.com/css?family=ZCOOL+KuaiLe');
@import url('https://fonts.googleapis.com/css?family=Montserrat');
</style>

</head>
<nav>
    <div class="nav-logo">
        <%= link_to "Doaki", root_path, :class => "logo" %>
    </div>
    <div class="nav-search-bar">
        <input type="text" placeholder="O que estÃ¡ procurando?" class="nav-search">
        <button class="nav-button-search">
            <i class="material-icons search-icon">search</i>
        </button>
    </div>
    <ul class="nav-buttons-list">
        <% if current_user %>
            <%= link_to 'DOAR',  new_donation_path, :class => "nav-buttons" %>
            <span class="separate">&nbsp</span>
            <%= link_to 'Log Out', logout_path, :class => "nav-buttons" %>
            <span class="separate">&nbsp</span>
            <span class="profile-span">
                <%= link_to user_path(current_user.id), :class => "profile-hyperlink" do %>
                    <i class="material-icons md-36 profile-icon">account_circle</i>
                <% end %>
            </span>
        <% else %>
            <%= link_to "Sign Up", signup_path, :class => "nav-buttons sing-up" %>
            <span class="separate">&nbsp</span>
            <%= link_to "Login", login_path, :class => "nav-buttons sing-up" %>
        <% end %>
    </ul>
</nav>

