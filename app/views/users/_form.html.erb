<%= form_with(model: user, local: true, class: "form") do |form| %>
   <h1 class="form-title"><%= @formTitle %></h1>

  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="label">
    <%= form.label :email, :class => "label-text" %>
    <%= form.text_field :email, :class => "input-field", :placeholder => "Obrigatorio"  %>
  </div>

  <div class="label">
    <%= form.label @userPw, :class => "label-text" %>
    <%= form.password_field :password, :class => "input-field", :placeholder => "Obrigatorio"  %>
  </div>

  <div class="label">
    <%= form.label @userPwConfirmation, :class => "label-text" %>
    <%= form.password_field :password_confirmation, :class => "input-field", :placeholder => "Obrigatorio"  %>
  </div>

  <div class="submit-label">
    <button class="submit-button">
      <i class="material-icons">
        done
      </i>
    </button>
  </div>
<% end %>
