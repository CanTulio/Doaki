<%= render partial: "shared/nav" %>

<header class="donations-header">
  <h1 class="title">Resultados</h1>
</header>

<div class="donations">
  <% if @donations.length == 0 %>
    <p class="no-donations-search">Não há resultados para sua pesquisa...</p>
  <% else %>
    <% @donations.each do |donation| %>
      <%= link_to donation_path(donation), :class => "donation-each" do %>
          <div class="donation-image-cont">
            <% if donation.images.attached? %>
              <%= image_tag(donation.images[0], :class => "donation-image") %>
            <% else %>
            <%= image_tag('picture', :class => "donation-no-image") %>
            <% end %>
          </div>
          <div class="donation-about">
            <h1 class = "donation-title"><%= donation.title %></h2>
            <p><%=donation.description%></p>
          </div>
      <% end %>
    <% end %>
  <% end %>
</div>
